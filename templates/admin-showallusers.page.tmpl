{{template "base" .}}

{{define "page-title"}}
Nástěnka událostí
{{end}}
{{define "content"}}

<div class="col-md-12">
    {{$users := index .Data "users"}}

    <table class="table table-striped table-hover" id="all-res">
        <thead>
            <tr>
                <th>ID</th>
                <th>Jméno</th>
                <th>Příjmení</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {{range $users}}
            <tr>
                <td>
                    <!-- TODO: Dodělej uživatele -->
                    <a href="/dashboard/cu/profile/{{.ID}}">
                        {{.ID}}
                    </a>

                </td>
                <td>{{.FirstName}}</td>
                <td>{{.LastName}}</td>
                <td>{{.Email}}</td>
            </tr>
            {{end}}
        </tbody>
    </table>

</div>
{{end}}