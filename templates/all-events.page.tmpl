{{template "base" .}}

{{define "page-title"}}
Nástěnka událostí
{{end}}
{{define "content"}}

<div class="col-md-12">
    {{$events := index .Data "events"}}

    <table class="table table-striped table-hover" id="all-res">
        <thead>
            <tr>
                <th>Nadpis</th>
                <th>Tělo</th>
                <th>Vytvořeno</th>
                <th>Upraveno</th>
                <th>Příjmení</th>
            </tr>
        </thead>
        <tbody>
            {{range $events}}
            <tr>
                <td>{{.Header}}</td>
                <td>{{.Body}}</td>
                <td>{{humanDate .CreatedAt}}</td>
                <td>{{humanDate .UpdatedAt}}</td>
                <td>{{.User.LastName}}</td>
            </tr>
            {{end}}
        </tbody>
    </table>
</div>
{{end}}